{
	"name": "portfolio-website",
	"version": "1.0.0",
	"description": "Portfolio website for Steven Failla",
	"main": "index.js",
	"scripts": {
		"start": "npm-run-all --parallel dev:server watch:sass",
		"server": "node server.js",
		"heroku-prebuild": "npm install && npm run build",
		"dev:server": "parcel public/index.html",
		"build:parcel": "parcel build public/index.html",
		"watch:sass": "node-sass sass/main.scss public/css/style.css -w",
		"compile:sass": "node-sass sass/main.scss public/css/style.comp.css",
		"prefix:css": "postcss -u autoprefixer -b \" > 1%, Last 2 versions, iOS 8, ie 11 \" public/css/style.comp.css -o public/css/style.prefix.css",
		"compress:css": "node-sass public/css/style.prefix.css public/css/style.css --output-style compressed",
		"build:manual": "npm-run-all compile:sass prefix:css compress:css"
	},
	"author": "Steven Failla",
	"license": "ISC",
	"dependencies": {
		"autoprefixer": "^9.7.6",
		"concat": "^1.0.3",
		"express": "^4.17.1",
		"lozad": "^1.9.0",
		"node-sass": "^4.13.1",
		"npm-run-all": "^4.1.5",
		
		"postcss-cli": "^7.1.0"
	},
	"devDependencies": {
		"parcel-bundler": "^1.12.4"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"ie <= 11"
	]
}
